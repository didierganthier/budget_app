<div class="flex flex-col items-center my-6">
  <h1 class="text-3xl font-medium mb-6"><%= @category.name %></h1>
  <% if @total == 0 %>
  <p class="text-gray-600">No expenses found</p>
  <img src="https://cdn-icons-png.flaticon.com/512/8541/8541407.png" alt="No expenses found" class="w-32 h-32 my-10">
<% else %>
  <p class="text-xl font-medium mb-6"><%= @total %></p>

  <div class="grid grid-cols-2 gap-6">
    <% @expenses.each do |expense| %>
      <div class="flex flex-col items-center p-6 rounded-lg bg-white shadow-lg">
        <p class="text-lg font-medium mb-3"><%= expense.name %></p>
        <p class="text-lg font-medium mb-3"><%= expense.amount %></p>
      </div>
    <% end %>
  </div>
<% end %>
  <%= link_to "Add new expense", new_category_expense_path(@category), class: "bg-blue-400 text-white py-2 px-4 rounded-lg m-6" %>
  <%= link_to "Back", categories_path, class: "text-blue-500 py-2 px-4 rounded-lg m-6" %>
</div>
